// 2ï¸âƒ£  PROXY OPENCLAW GATEWAY
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
const GATEWAY_HOST = process.env.GATEWAY_HOST || '127.0.0.1';
const GATEWAY_PORT = process.env.GATEWAY_PORT || 18789;
const GATEWAY_URL = `http://${GATEWAY_HOST}:${GATEWAY_PORT}`;

console.log(`[Gateway] Target: ${GATEWAY_URL}`);
console.log(`[Gateway] Proxy at: http://localhost:${PORT}/__openclaw__/*\n`);

app.use('/__openclaw__', createProxyMiddleware({
  target: GATEWAY_URL,
  changeOrigin: true,
  pathRewrite: {
    '^/__openclaw__': ''  // Remove prefix before sending to gateway
  },
  ws: true,  // â­ï¸ CRITICAL: Enable WebSocket proxying
  
  // Log API requests (not WebSocket)
  onProxyReq: (proxyReq, req, res) => {
    if (!req.url.endsWith('/ws')) {
      console.log(`[Proxy] ${req.method.padEnd(6)} ${req.url}`);
    }
  },
  
  // Error handling
  onError: (err, req, res) => {
    console.error(`[Proxy Error] ${err.message}`);
    res.status(503).json({
      error: 'Gateway unavailable',
      details: err.message,
      gateway: GATEWAY_URL
    });
  }
}));

