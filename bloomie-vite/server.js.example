app.get('*', (req, res) => {
  res.sendFile(path.join(dashboardPath, 'index.html'), (err) => {
    if (err) {
      console.error(`[SPA] 404: ${req.path}`);
      res.status(404).json({ error: 'Not found' });
    }
  });
});

